{% extends "base.njk" %}
{% block content %}

    <h1 class="page-title">Languages of Gradia</h1>

    <section>
        This site collects information on the languages that have been contstructed
        for our fantasy setting, <a href="https://gradia.org">Gradia</a>.
    </section>

    {% for lang in languages %}
    <section class="language-section">
        <h2 class="language-title">{{ lang.name }}</h2>
        <div><a href="/dict.html?lang={{ lang.slug }}">dictionary</a> | <a href="/grammar?lang={{ lang.slug }}">grammar</a></div>
        <p>{{ lang.description }}</p>
    </section>
    {% endfor %}

{% endblock %}
